#!/bin/bash

clone_dir="$HOME/Documents/clones/"
repo_dir="$clone_dir/neovim"

mkdir -p "$clone_dir"
cd "$clone_dir"

if [ -d "$repo_dir" ]; then
    cd "$repo_dir"
    git pull
else
    git clone git@github.com:neovim/neovim.git
    cd "$repo_dir"
fi

git pull

make CMAKE_BUILD_TYPE=RelWithDebInfo CMAKE_CXX_FLAGS="-march=native" CMAKE_CC_FLAGS="-march=native"

#make CMAKE_INSTALL_PREFIX=$HOME/.local/ install
